<UserControl x:Class="CustomEditorSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:re="http://schemas.devexpress.com/winfx/2008/xaml/reportdesigner"
    xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/reportdesigner">
    <dxre:ReportDesigner x:Name="designer" AutoStartDesign="True">
        <dxre:ReportDesigner.Model>
            <dxre:ReportDesignerViewModel ServiceUri="../ReportService1.svc" ReportName="ReportService.SampleReport"/>
        </dxre:ReportDesigner.Model>
    </dxre:ReportDesigner>
</UserControl>
